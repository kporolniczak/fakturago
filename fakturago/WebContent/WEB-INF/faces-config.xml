<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <converter>
  <converter-id>provinceConverter</converter-id>
  <converter-class>pl.com.fakturago.config.ProvinceConverter</converter-class>
 </converter>
 <managed-bean>
  <managed-bean-name>buyerBean</managed-bean-name>
  <managed-bean-class>pl.com.fakturago.controllers.BuyerFormBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>sellerBean</managed-bean-name>
  <managed-bean-class>pl.com.fakturago.controllers.SellerFormBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>invoiceBean</managed-bean-name>
  <managed-bean-class>pl.com.fakturago.controllers.InvoiceFormBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>provinceBean</managed-bean-name>
  <managed-bean-class>pl.com.fakturago.controllers.ProvinceBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <application>
  <resource-bundle>
   <base-name>pl.com.fakturago.messages</base-name>
   <var>msg</var>
  </resource-bundle>
  <message-bundle>pl.com.fakturago.errormessages</message-bundle>
  <locale-config>
   <default-locale>pl</default-locale>
   <supported-locale>pl</supported-locale>
   <supported-locale>en</supported-locale>
  </locale-config>
 </application>
</faces-config>
